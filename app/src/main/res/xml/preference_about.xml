<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidElementNotAllowed -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/settings_about"
        app:singleLineTitle="false" >

        <Preference
            android:key="pref_version"
            android:title="@string/version"
            app:iconSpaceReserved="false"
            app:icon="@drawable/ic_lightning"
            app:singleLineTitle="false">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/url_app_home_page">
                <extra
                    android:name="PACKAGE"
                    android:value="@string/application_id" />

                <extra
                    android:name="ACTIVITY"
                    android:value="fulguris.activity.SettingsActivity" />

                <extra
                    android:name="FRAGMENT"
                    android:value="fulguris.settings.fragment.AboutSettingsFragment" />

            </intent>

        </Preference>

        <Preference
            android:key="@string/pref_key_webview"
            android:title="@string/agent_web_view"
            app:icon="@drawable/ic_webview"
            app:singleLineTitle="false">

            <!--
            Launch WebView DevTools, see https://chromium.googlesource.com/chromium/src/+/HEAD/android_webview/docs/developer-ui.md#launching-webview-devtools
            See also: https://chromium.googlesource.com/chromium/src/+/HEAD/android_webview/docs/webview-shell.md
            -->
            <intent
                android:action="com.android.webview.SHOW_DEV_UI">
                <extra
                    android:name="SOURCE"
                    android:value="SELF" />
            </intent>
        </Preference>

        <Preference
            android:title="@string/settings_title_privacy_policy"
            android:summary="@string/settings_summary_privacy_policy"
            app:iconSpaceReserved="false"
            app:icon="@drawable/ic_privacy_tip_outline"
            app:singleLineTitle="false">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/url_privacy_policy">
                <extra
                    android:name="PACKAGE"
                    android:value="@string/application_id" />

                <extra
                    android:name="ACTIVITY"
                    android:value="fulguris.activity.SettingsActivity" />

                <extra
                    android:name="FRAGMENT"
                    android:value="fulguris.settings.fragment.AboutSettingsFragment" />
            </intent>

        </Preference>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/licenses">

        <Preference
